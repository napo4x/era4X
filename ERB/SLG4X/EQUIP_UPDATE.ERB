	LOCALS = %TOSTR(EQUIP_LIST:PRINT_COUNT:PRICE, "$####,###")%
	TRYCALLFORM GET_%EQUIP_CATEGORY_NAME_EN:CATEGORY_NUM%_NAME_{EQUIP_LIST:PRINT_COUNT:EQUIP_ID}

